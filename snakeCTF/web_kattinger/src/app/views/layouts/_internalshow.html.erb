    <div class="container">
      <div class="row">
        <div class="col s12 m12">
          <% if content_for?(:subcontent_1) %>
            <div class="card">
              <div class="card-content">
                <%= yield(:subcontent_1) %>
              </div>
            </div>
          <% end %>
          <% if content_for?(:subcontent_2) %>
            <div class="card">
              <div class="card-content">
                <%= yield(:subcontent_2) %>
